public class Player {
    private String name;
    private int score;
    private HealthBar healthBar;
    private Stats stats;

    public Player() {
    }

    public Player(String name, int point, Stats stats, HealthBar healthBar) {
	this.name = name;
	this.score = point;
	this.healthBar = healthBar;
	this.stats = stats;
    }

    public void setName(String name) {
	this.name = name;
    }

    public String getName() {
	return(this.name);
    }

    public HealthBar getHealthBar() {
	return(this.healthBar);
    }

    public void setHealthBar(HealthBar healthBar) {
	this.healthBar = healthBar;
    }

    public Stats getStats() {
	return(this.stats);
    }

    public void resetScore() {
	this.score = 0;
    }

    public void addScore(int point) {
	this.score += point;
    }

    public void removeScore(int point) {
	this.score -= point;
    }

    public void attack(Player player) {
	if (player.getStats().getDefence() < this.getStats().getAttack())
	    player.getHealthBar().removeCurrentPoint(this.getStats().getAttack() - player.getStats().getDefence());
    }
}